{
	"env": {
		"commonjs": true,
		"es6": true,
		"node": true
	},
	"extends": ["airbnb-base"],
	"globals": {
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly"
	},
	"parserOptions": {
		"ecmaVersion": 2018
	},
	"rules": {
		"indent": [2, "tab"],
		"no-tabs": "off",
		"linebreak-style": "off",
		"prefer-arrow-callback": "warn"
	}
}
